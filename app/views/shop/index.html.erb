<h1>Shop Page</h1>

<h1>Offer List</h1>
<%= link_to 'Homepage', home_index_path %>
  <table>
    <thead>
      <td>Image</td>
      <td>Name</td>
      <td>Genre</td>
      <td>Amount</td>
      <td>Coins</td>
      <td>Status</td>
    </thead>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= image_tag offer.image.url if offer.image.present? %></td>
        <td><%= offer.name %></td>
        <td><%= link_to offer.name, shop_path(offer) %></td>
        <td><%= offer.genre %></td>
        <td><%= offer.amount %></td>
        <td><%= offer.coin %></td>
        <td><%= offer.status %></td>
        <td>
    <%end%>
  </table>