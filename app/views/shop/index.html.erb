<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mb-4">Shop Page</h1>

      <h2 class="mb-4">Offer List</h2>
      <%= link_to 'Homepage', home_index_path, class: "btn btn-secondary mb-3" %>

      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= Offer.human_attribute_name(:image) %></th>
            <th><%= Offer.human_attribute_name(:name) %></th>
            <th>Genre</th>
            <th><%= Offer.human_attribute_name(:amount) %></th>
            <th><%= Offer.human_attribute_name(:coins) %></th>
            <th><%= Offer.human_attribute_name(:status) %></th>
          </tr>
        </thead>
        <tbody>
          <% @offers.each do |offer| %>
            <tr>
              <td><%= image_tag offer.image.url if offer.image.present? %></td>
              <td><%= link_to offer.name, shop_path(offer) %></td>
              <td><%= offer.genre %></td>
              <td><%= offer.amount %></td>
              <td><%= offer.coins %></td>
              <td><%= offer.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
