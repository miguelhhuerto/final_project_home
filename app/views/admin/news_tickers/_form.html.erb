<%= link_to 'News Index', admin_news_tickers_path %> 

<%= form_with model: @news_ticker, url: admin_news_tickers_path do |form| %>
<% if news_ticker.errors&.any? %>
  <ul>
    <% news_ticker.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
  <% end %>
  <div>
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="field">
    <%= form.label "Status" %>
    <%= form.collection_radio_buttons :status, NewsTicker.statuses.keys, :to_s, :to_s, { label: "Status" } %>
  </div>

  <%= form.submit %>
<% end %>


