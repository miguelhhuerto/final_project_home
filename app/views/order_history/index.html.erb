<table class="table table-striped table-hover">
  <thead>
      <td>Serial Number</td>
      <td>Amount</td>
      <td>Coins</td>
      <td>Created at</td>
      <td>State</td>
  </thead>
  <% @orders.each do |order| %>
      <td><%= order.serial_number %></td>
      <td><%= order.amount %></td>
      <td><%= order.coins %></td>
      <td><%= order.created_at %></td>
      <td><%= order.state %></td>
      <td><%= button_to 'Cancel Order', cancel_user_order_history_path(order), method: :patch if order.may_cancel? && order.state == "submitted" %></td>
    </tr>
  <% end %>
</table>