<h1>Lottery Page</h1>

<div id="category-buttons">
  <button class="category-button active" data-category-id="all">All</button>
  <% @categories.each do |category| %>
    <button class="category-button" data-category-id="<%= category.id %>"><%= category.name %></button>
  <% end %>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @items.each do |item| %>
    <div class="col">
      <div class="card h-100">
        <%= image_tag item.image.url, class: "card-img-top", alt: "..." if item.image.present? %>
        <div class="card-body">
          <h5 class="card-title"><%= item.name %></h5>
          <p class="card-text">Description or additional content here</p>
        </div>
        <div class="card-footer">
          <small class="text-muted">Last updated 3 mins ago</small>
        </div>
      </div>
    </div>
  <% end %>
</div>

