<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="mb-4">Edit Profile</h2>

      <%= form_for @user do |f| %>
        <%= f.fields_for :profile do |ff| %>
          <div class="form-group">
            <%= ff.label :image %><br />
            <%= ff.file_field :image, class: "form-control-file" %>
          </div>

          <div class="form-group">
            <%= ff.label :username %>
            <%= ff.text_field :username, class: "form-control", autofocus: true %>
          </div>

          <div class="form-group">
            <%= ff.label :phone_number %>
            <%= ff.text_field :phone_number, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= ff.label :password %> <i>(leave blank if you don't want to change it)</i>
            <%= ff.password_field :password, class: "form-control", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
            <% end %>
          </div>

          <div class="form-group">
            <%= ff.label :password_confirmation %>
            <%= ff.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="form-group">
            <%= ff.label :current_password %> <i>(we need your current password to confirm your changes)</i>
            <%= ff.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit 'Save', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
