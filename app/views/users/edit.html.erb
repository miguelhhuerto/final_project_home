<h2>Edit Profile</h2>

<%= form_for @user do |f| %>

  <%= f.fields_for :profile do |ff| %>

    <div>
      <%= ff.file_field :image %>
    </div>

    <div class="field">
      <%= ff.label :username %><br />
      <%= ff.text_field :username, autofocus: true %>
    </div>

    <div class="form-group">
      <%= ff.label :phone_number %>
      <%= ff.text_field :phone_number, class: "form-control" %>
    </div>

    <div class="field">
      <%= ff.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= ff.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= ff.label :password_confirmation %><br />
      <%= ff.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= ff.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= ff.password_field :current_password, autocomplete: "current-password" %>
    </div>

  <% end %>

    <div class="form-group">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
    </div>
<% end %>